package poo;

public class Coche {
	
	private int ruedas;
	
	private int largo;
	
	private int ancho;
	
	private int motor;
	
	private int peso_plataforma;
	
	private String color;
	
	private int peso_total;
	
	private boolean asientos_cuero, climatizador;
	
	public Coche() {
		
		ruedas = 4;
		
		largo = 5000;
		
		ancho = 2000;
		
		motor = 2400;
		
		peso_plataforma = 700;
		
		peso_total = 3100;
		
	}
	public String dime_datos generales() {
		
		return "La plataforma del vehiculo tiene " + ruedas + "ruedas " + ". Mid " + largo/1000 + "metros con un ancho de " + ancho + " cm y un peso de plataforma de " + peso_plataforma + " kg";		
 }
	
	public void establecer_color(String color_coche) {
		
		color = color_coche;
		
 }
	
	public String dime_color() {
		
		return "El color del coche es " + color;
		
 }
	public String dime_peso_total() {
		
		return "El peso total del coche es " + peso_total;
			
 }
	
	
}